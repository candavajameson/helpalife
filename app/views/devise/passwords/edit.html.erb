<div class="row">
  <div class="span6 offset4">
<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
        <div><%= f.label :password, "New password" %>
          <div style="margin-left: 162px" >
          <%= f.password_field :password, :autofocus => true , :required => true%></div>
                                          </div>
        <div><%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation , :required => true%></div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Change my password" ,:class=>"btn btn-primary" %>
  </div>
<% end %>

  </div>
</div>

