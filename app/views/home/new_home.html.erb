
<div class="sidebar top" style="float:left;width: auto;color: white;padding: 20px;">

  <ul>
    <li style="display: inline-block;" >Search donors</li>
    <li style="display: inline-block;">
      <%= form_for(User.new, :as => :user, :url => donors_path(:user),
                          :html => { :method => :get} ) do |f| %>

          <%= f.select :blood_group, options_for_select([["A1+", "A1+"],["A1-", "A1-"], ["A2+", "A2+"],["A2-", "A2-"],
                                                         ["B+", "B+"],["B-", "B-"],["A1B+", "A1B+"],["A1B-", "A1B-"],
                                                         ["A2B+", "A2B+"],["A2B-", "A2B-"],["AB+", "AB+"],
                                                         ["AB-", "AB-"],["O+", "O+"],["O-", "O-"],["A+", "A+"],
                                                         ["A-", "A-"]]) , :prompt => "- Choose blood group -",
                       :required => true %>


          <%= f.collection_select :state_id, State.order(:name), :id, :name,
                                  :prompt => "- Select state -"%>
          <%= f.grouped_collection_select :district_id, State.order(:name), :districts, :name, :id, :name,
                                          :prompt => "- Select district -"%>
          <%= f.button :submit%>
      <% end %>

  </ul>
</div>


<div class="sidebar top" >
  <!---start-da-slider----->
  <div id="da-slider" class="da-slider">
  <% @recent_needs.each do |need| %>
    <div class="da-slide">
      <h2><%= need.blood_group %> <%= need.state.name %> (<%= need.required_date %>)</h2>
      <p><b> <%= need.patient_name  %> </b> needs <b> <%= need.blood_group  %> </b>  blood on  <b>
        <%= need.required_date   %> </b>  for <%= need.reason %></p>
      <a class="da-link" href="<%= need_path(need) %>">See Requirement</a>
    </div>
  <% end  %>
    <nav class="da-arrows">
      <span class="da-arrows-prev"></span>
      <span class="da-arrows-next"></span>
    </nav>
  </div>
</div>

<div style="margin-top: 10px;clear: left;width: 61%;text-align: center;font-family: 'PTSerifRegular','Times','serif';">
